Config { font = "xft:JetBrains Mono:weight=bold;pixelsize=11:antialias=true"
       , bgColor = "#2e3440"
       , fgColor = "#d8dee9"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Network "eth1" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [ ] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %memory%  %swap% %eth0% %eth1% }{ <fc=#49E20E>%date%</fc>"
       }
